{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "customManagers": [
    {
      "customType": "regex",
      "description": "Update proxmox-exporter references",
      "managerFilePatterns": ["/^charts\\/proxmox-exporter\\/Chart\\.yaml$/"],
      "matchStrings": [
        "appVersion: \"(?<currentValue>.*?)\"\\s*\\nversion: (?<currentChartVersion>.*?)\\s*\\n"
      ],
      "depNameTemplate": "prometheus-pve/prometheus-pve-exporter",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$",
      "autoReplaceStringTemplate": "appVersion: \"{{newValue}}\"\nversion: \"{{newValue}}\""
    }
  ]
}
